{
  "license": "MIT",
  "version": "0.0.6",
  "name": "tailwind-debug-mode",
  "description": "A Tailwind CSS plugin that makes it easier to debug layouts.",
  "repository": "https://github.com/jeroengerits/tailwind-debug-mode",
  "author": "Jeroen Gerits <jeroen@gerits.email>",
  "main": "src/index.js",
  "keywords": [
    "tailwind",
    "tailwind-plugin",
    "tailwindcss",
    "tailwindcss-plugin",
    "plugin",
    "debug",
    "debug-mode",
    "layout",
    "debug-layout",
    "debug-layout-mode"
  ],
  "files": [
    "src/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "dev": "concurrently \"npm run serve\" \"npm run watch\"",
    "serve": "live-server .",
    "watch": "npm run build -- -w",
    "build": "tailwindcss -o dist/tailwind.css",
    "format": "prettier . --write"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "live-server": "^1.2.1",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.22"
  }
}
